@using ePizzaHub.Models;
@model IEnumerable<ItemModel>
@{
    ViewData["Title"] = "Home Page";
    Layout = "_FullSizeLayout";
} 
<div style="background: #1a5ca3">
    <div class="container">
<div class="row">
    <div class="col-sm-8">
        <div class="pt-5 pb-5 text-white">
            <h1>ePizzaHub's Online Ordering Websit!</h1>
            <p class='pb-4'>
                Yummy pizza delivered fast at your door step!
            </p>
            <p>
                <a href="#heading" class="btn btn-success">ORDER ONLINE NOW</a>
            </p>
        </div>

    </div>
    <div class="col-sm-4">
        <img src="~/images/pizza-header.png" class="img-fluid" />
    </div>
</div>
    </div>
</div>
<div class="container pt-5 pt-4">
    <h2>Pizza, Dessert and Beverages</h2>
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-sm-4 mb-3">
                <div class="card">
  <img src="@item.ImageUrl" class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title">@item.Name</h5>
    <p class="card-text">@item.Description</p>
    <a href="javascript:void(0)" onclick="AddToCart('@item.Id', '@item.Name','@item.UnitPrice',1)" class="btn btn-primary">Add To Cart</a>
  </div>
</div>
            </div>
        }
    </div>
        </div>

<div class="toast" id="toastCart">
    <div class="toast-header">
        <strong class="mr-auto">Notification</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        </button>
    </div>
    <div class="toast-body"></div>
</div>
